<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
	android:id="@+id/widget56"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
<Spinner
	android:id="@+id/spinner_categories"
	android:layout_width="198dp"
	android:layout_height="37dp"
	android:layout_x="112dp"
	android:layout_y="6dp" />
<TextView
	android:id="@+id/txtCategory"
	android:layout_width="93dp"
	android:layout_height="27dp"
	android:text="Category"
	android:textSize="16sp"
	android:textStyle="bold"
	android:gravity="center"
	android:layout_x="4dp"
	android:layout_y="10dp" />
<TextView
	android:id="@+id/txtSortBy"
	android:layout_width="93dp"
	android:layout_height="33dp"
	android:text="Sort By"
	android:textSize="16sp"
	android:textStyle="bold"
	android:gravity="center"
	android:layout_x="0dp"
	android:layout_y="60dp" />
<Spinner
	android:id="@+id/spinner_sortBy"
	android:layout_width="198dp"
	android:layout_height="37dp"
	android:layout_x="112dp"
	android:layout_y="58dp" />
<TextView
	android:id="@+id/txtDistance"
	android:layout_width="93dp"
	android:layout_height="33dp"
	android:text="Distance"
	android:textSize="16sp"
	android:textStyle="bold"
	android:gravity="center"
	android:layout_x="10dp"
	android:layout_y="111dp" />
<RadioGroup
	android:id="@+id/radioGrpDistance"
	android:layout_width="201dp"
	android:layout_height="42dp"
	android:orientation="horizontal"
	android:layout_x="109dp"
	android:layout_y="110dp">
<RadioButton
	android:id="@+id/radio_nearby"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:onClick="onRadioButtonClicked"
	android:text="@string/nearby" />
<RadioButton
	android:id="@+id/radio_entire"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:onClick="onRadioButtonClicked"
	android:text="@string/entire" />
</RadioGroup>
<TextView
	android:id="@+id/txtTimings"
	android:layout_width="93dp"
	android:layout_height="33dp"
	android:text="Timings"
	android:textSize="16sp"
	android:textStyle="bold"
	android:layout_x="16dp"
	android:layout_y="172dp" />
<TextView
	android:id="@+id/txtPreference"
	android:layout_width="93dp"
	android:layout_height="33dp"
	android:text="Preference"
	android:textSize="16sp"
	android:textStyle="bold"
	android:gravity="center"
	android:layout_x="12dp"
	android:layout_y="283dp" />
<EditText
	android:id="@+id/editPreference"
	android:layout_width="195dp"
	android:layout_height="wrap_content"
	android:text="Enter preference"
	android:textSize="18sp"
	android:layout_x="115dp"
	android:layout_y="279dp" />
<Button
	android:id="@+id/btn_Lists"
	android:layout_width="135dp"
	android:layout_height="wrap_content"
	android:text="@string/btn_Lists"
	android:textSize="16sp"
	android:textStyle="bold"
	android:gravity="center"
	android:layout_x="18dp"
	android:layout_y="374dp" 
	android:onClick="displayList"/>
<Button
	android:id="@+id/btn_Maps"
	android:layout_width="135dp"
	android:layout_height="wrap_content"
	android:text="@string/btn_Maps"
	android:textSize="16sp"
	android:textStyle="bold"
	android:gravity="center"
	android:layout_x="162dp"
	android:layout_y="373dp"
	android:onClick="displayMap" />
</AbsoluteLayout>
